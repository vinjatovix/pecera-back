{
  "name": "pecera-back",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 0",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:clean": "rm -r dist; exit 0",
    "build:di": "find ./src -type f \\( -name '*.json' -o -name '*.yml' -o -name '*.yaml' -o -name '*.html' -o -name '*.png' -o -name '*.env' \\) -exec rsync --relative {} dist/ \\;",
    "build:tsc": "tsc -p tsconfig.prod.json --sourceMap false",
    "check-dependencies": "madge --circular ./src",
    "dev": "ts-node-dev --ignore-watch node_modules ./src/apps/pecera/start.ts",
    "docker:mongo": "docker-compose -f ./docker/docker-compose.yml up --build -d",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --fix",
    "pre-commit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commit-message-validator"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "npm run lint:fix"
    ]
  },
  "config": {
    "commit-message-validator": {
      "pattern": "^\\[GH-[\\d]+\\]\\s.*$",
      "errorMessage": "Invalid commit message. Valid example: [GH-123] feat(api): add new feature"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "env-var": "^7.5.0",
    "errorhandler": "^1.5.1",
    "express": "^4.19.2",
    "express-promise-router": "^4.1.1",
    "express-validator": "^7.1.0",
    "glob": "^11.0.0",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.8.0",
    "node-dependency-injection": "^3.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "winston": "^3.13.1",
    "winston-mongodb": "^5.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "madge": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0"
  }
}
